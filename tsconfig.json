{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "incremental": false,
    "outDir": "./",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vitest",
      "cypress",
      "vue/ref-macros",
      "vite/client",
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client"
    ],
    "paths": {
      "~/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "exclude": [
    "dist",
    "node_modules",
    "cypress",
    "build",
    "scripts",
    "postcss.config.js",
    "tailwind.config.js",
    "examples"
  ]
}
